{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strict": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "outDir": "lib",
        "declaration": true
    },
    "include": [
        "src/**/*",
    ]
}